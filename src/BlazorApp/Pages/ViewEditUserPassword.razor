@page "/ViewEditUserPassword"
@page "/ViewEditUserPassword/{Id:int}"

@inherits ProjectRazorPage<VmEditUserPassword>

@if (ViewModel != null)
{
    <RadzenCard>
        <RadzenStack>
            <RadzenText TextStyle="TextStyle.H3" class="mb-2">@ViewModel.Dc.DcExUser.Data.LoginName</RadzenText>
            <BxEntry Entry="ViewModel.EntryCurrentPassword" IsPassword="ViewModel.ShowEntriesAsPassword"></BxEntry>
            <BxEntry Entry="ViewModel.EntryNewPassword" IsPassword="ViewModel.ShowEntriesAsPassword"></BxEntry>
            <RadzenSwitch @bind-Value="ViewModel.ShowEntriesAsPassword" Title="@ResViewEditUser.LblShowPassword"></RadzenSwitch>
        </RadzenStack>
    </RadzenCard>
}